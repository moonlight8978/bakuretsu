  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Backup",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/index.ts",
      "args": ["--action=backup"],
      "runtimeExecutable": "tsx"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Restore",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/index.ts",
      "args": ["--action=restore"],
      "runtimeExecutable": "tsx"
    }
  ]
}
